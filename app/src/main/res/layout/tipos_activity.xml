<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MainLayout">

    <Button
        android:id="@+id/btnRegresar"
        style="@style/ButtonAmm"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/btn_regresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logoImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/LogoRedondo" />

    <LinearLayout
        android:id="@+id/tipoLimpieza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/form_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImg">

        <TextView
            android:id="@+id/titleLimpieza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_tipo_limp"
            android:layout_marginTop="5dp"
            style="@style/titles"/>
        <TextView
            android:id="@+id/idTextLimp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:layout_marginTop="5dp"
            style="@style/textForm"/>
        <Spinner
            android:id="@+id/idSpinnerLimp"
            android:layout_width="match_parent"
            style="@style/SpinerInputs"/>
        <TextView
            android:id="@+id/nombreTextLimp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:layout_marginTop="5dp"
            style="@style/textForm"/>
        <EditText
            android:id="@+id/nombreEditTextLimp"
            style="@style/EditTextInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:hint="@string/nombre"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/button1Limp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/nombreEditTextLimp">

            <Button
                android:id="@+id/btnBuscarLimp"
                android:text="@string/btnBuscar"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
            <Button
                android:id="@+id/btnCrearLimp"
                android:text="@string/btnCrear"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button2Limp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/button1Limp"
            app:layout_constraintLeft_toLeftOf="parent">

            <Button
                android:id="@+id/btnMostrarLimp"
                android:text="@string/btnMostrar"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
            <Button
                android:id="@+id/btnEliminarLimp"
                android:text="@string/btnEliminar"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tipoDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/form_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipoLimpieza">

        <TextView
            android:id="@+id/titleDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_tipo_docu"
            android:layout_marginTop="5dp"
            style="@style/titles"/>
        <TextView
            android:id="@+id/idTextDocu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:layout_marginTop="5dp"
            style="@style/textForm"/>
        <Spinner
            android:id="@+id/idSpinnerDocu"
            android:layout_width="match_parent"
            style="@style/SpinerInputs"/>
        <TextView
            android:id="@+id/nombreTextDocu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:layout_marginTop="5dp"
            style="@style/textForm"/>
        <EditText
            android:id="@+id/nombreEditTextDocu"
            style="@style/EditTextInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:hint="@string/nombre"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/button1Docu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/nombreEditTextDocu">

            <Button
                android:id="@+id/btnBuscarDocu"
                android:text="@string/btnBuscar"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
            <Button
                android:id="@+id/btnCrearDocu"
                android:text="@string/btnCrear"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button2Docu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/button1Docu"
            app:layout_constraintLeft_toLeftOf="parent">

            <Button
                android:id="@+id/btnMostrarDocu"
                android:text="@string/btnMostrar"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
            <Button
                android:id="@+id/btnEliminarDocu"
                android:text="@string/btnEliminar"
                android:layout_marginHorizontal="5dp"
                style="@style/ButtonAmm"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>